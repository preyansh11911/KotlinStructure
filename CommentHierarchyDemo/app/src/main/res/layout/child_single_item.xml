<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/box_reply"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_rpl_user"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/sample" />

    <TextView
        android:id="@+id/txt_rpl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_rpl_user"
        android:layout_alignTop="@+id/img_rpl_user"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/img_rpl_user"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Preyansh Brahmbhatt Preyansh Brahmbhatt Preyansh Brahmbhatt Preyansh Brahmbhatt Preyansh Brahmbhatt Preyansh Brahmbhatt Preyansh Brahmbhatt Preyansh Brahmbhatt " />

    <TextView
        android:id="@+id/txt_rpl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/img_rpl_user"
        android:layout_below="@+id/img_rpl_user"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        tools:text="Hey bro this is amazing. Hey bro this is amazing. Hey bro this is amazing. Hey bro this is amazing. Hey bro this is amazing. Hey bro this is amazing. " />

    <TextView
        android:id="@+id/txt_rpl_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txt_rpl"
        android:layout_below="@id/txt_rpl"
        android:layout_marginTop="4dp"
        android:padding="2dp"
        android:text="Like"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_rpl_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_rpl"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/txt_rpl_like"
        android:padding="2dp"
        android:text="Reply"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>